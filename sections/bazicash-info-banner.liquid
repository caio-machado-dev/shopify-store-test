{%- comment -%}
  ===========================================
  BAZICASH - Banner Informativo
  Banner para promover o sistema de cashback
  ===========================================
{%- endcomment -%}

{%- liquid
  # Buscar saldo do StoreCredit do cliente logado
  assign store_credit_balance = 0
  if customer and customer.store_credit_accounts.size > 0
    assign store_credit_balance = customer.store_credit_accounts.first.balance.amount
  endif
-%}

{%- style -%}
  .bazicash-info-banner {
    background: {{ section.settings.background_gradient }};
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px 0 {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  @media screen and (min-width: 750px) {
    .bazicash-info-banner {
      padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    }
  }

  .bazicash-info-banner::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 300px;
    height: 300px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 50%;
    pointer-events: none;
  }

  .bazicash-info-banner::after {
    content: '';
    position: absolute;
    bottom: -50%;
    left: -10%;
    width: 250px;
    height: 250px;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 50%;
    pointer-events: none;
  }

  .bazicash-info-banner__container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }

  .bazicash-info-banner__icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    animation: float 3s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .bazicash-info-banner__title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }

  .bazicash-info-banner__subtitle {
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
    opacity: 0.95;
  }

  .bazicash-info-banner__balance {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    margin-bottom: 1.5rem;
    font-size: 1.2rem;
    font-weight: 700;
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .bazicash-info-banner__balance-label {
    opacity: 0.9;
    font-size: 0.9rem;
    margin-right: 0.5rem;
  }

  .bazicash-info-banner__balance-value {
    font-size: 1.5rem;
  }

  .bazicash-info-banner__cta {
    display: inline-block;
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    padding: 1rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .bazicash-info-banner__cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
    color: {{ section.settings.button_text_color }};
    border-color: rgba(255, 255, 255, 0.3);
  }

  .bazicash-info-banner__features {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-top: 2rem;
    flex-wrap: wrap;
  }

  .bazicash-info-banner__feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
    opacity: 0.9;
  }

  .bazicash-info-banner__feature-icon {
    font-size: 1.2rem;
  }

  @media screen and (max-width: 749px) {
    .bazicash-info-banner__icon {
      font-size: 2.5rem;
    }

    .bazicash-info-banner__title {
      font-size: 1.5rem;
    }

    .bazicash-info-banner__subtitle {
      font-size: 1rem;
    }

    .bazicash-info-banner__balance {
      padding: 0.5rem 1rem;
      font-size: 1rem;
    }

    .bazicash-info-banner__balance-value {
      font-size: 1.2rem;
    }

    .bazicash-info-banner__cta {
      padding: 0.75rem 2rem;
      font-size: 1rem;
    }

    .bazicash-info-banner__features {
      flex-direction: column;
      gap: 1rem;
    }
  }
{%- endstyle -%}

